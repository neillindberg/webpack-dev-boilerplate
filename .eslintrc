{
        "root": true,
        "extends": [
                "plugin:react/recommended"
        ],
        "parserOptions": {
                "ecmaVersion": 6,
                "sourceType": "module",
                "ecmaFeatures": {
                        "jsx": true
                }
        },
        "parser": "babel-eslint",
        "rules": {
                "semi": "error",
                "quotes": [
                        "error",
                        "single"
                ],
                "comma-dangle": [
                        "error",
                        "never"
                ],
                "space-before-function-paren": [
                        "error",
                        "always"
                ],
                "array-bracket-spacing": [
                        "error",
                        "never"
                ],
                "sort-imports": "off",
                "linebreak-style": "off",
                "prefer-named-capture-group": "off",
                "id-length": 0
        }
}